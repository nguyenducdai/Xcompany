        //    );

        columns.Add()
            .DataField("OrderDate")
            .DataType(GridColumnDataType.Date);

        columns.Add()
            .DataField("Freight")
            .HeaderFilter(f => f.GroupInterval(100));

        columns.Add()
            .DataField("ShipCountry");

