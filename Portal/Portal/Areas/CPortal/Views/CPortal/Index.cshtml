@using DevExtreme.AspNet.Mvc
@{
    ViewData["Title"] = "CPortal";
    Layout = "~/Views/Shared/_LayoutCportal.cshtml";
}
@(Html.DevExtreme().DataGrid()
    .Columns(columns =>
    {
        //columns.Add()
