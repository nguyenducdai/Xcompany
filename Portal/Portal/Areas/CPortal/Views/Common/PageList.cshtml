
@{
    ViewData["Title"] = "PageList";
    Layout = "~/Views/Shared/_LayoutCportal.cshtml";
}

@section Scripts{
    <script src="~/js/applications/page.controller.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/js/applications/common.js"></script>
    <script>
        renderDatatable();
    </script>
}

<div ng-controller="PageController" id="main_content">
    <div class="row">
        <div class="col-lg-12">
            <div class="pull-right">
                <button class="btn btn-primary" style="margin-bottom: 10px" type="button" ng-click="showDialog(x.id)">Add Page</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="messageinfo" style="display:none"></div>
        <table id="dataTable" class="display" cellspacing="0">
            <thead>
                <tr>
                    <th width="20" class="text-center">No</th>
                    <th width="300">Page Name</th>
                    <th width="30" class="text-center">Descaption</th>
                    <th width="200" class="text-center">Alias</th>
                    <th width="200" class="text-center">Meta Title</th>
                    <th width="200" class="text-center">Meta Keyword</th>
                    <th width="200" class="text-center">Meta Description</th>
                    <th width="2" class="text-center">Status</th>
                    <th width="200" class="text-center">CreateAt</th>
                    <th width="200" class="text-center">UpdateAt</th>
                    <th width="200" class="text-center">CreateBy</th>
                    <th width="200" class="text-center">UpdateBy</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="x in DataTable">
                    <td width="20" class="text-center">{{($index+1)}}</td>
                    <td width="300">{{x.name}}</td>
                    <td width="300">{{x.descaption}}</td>
                    <td width="300">{{x.alias}}</td>
                    <td width="300">{{x.metaTitle}}</td>
                    <td width="300">{{x.metaKeyword}}</td>
                    <td width="300">{{x.metaDescription}}</td>
                    <td width="30" class="text-center"><input type="checkbox" ng-checked="{{x.status}}" disabled /></td>
                    <td width="200" class="text-center">{{x.createAt | date:"dd-MM-yyyy HH:mm:ss" }}</td>
                    <td width="200" class="text-center">{{x.updateAt | date:"dd-MM-yyyy HH:mm:ss" }}</td>
                    <td width="300">{{x.createBy}}</td>
                    <td width="300">{{x.updateBy}}</td>
                    <td><a ng-click="showDialog(x.id)">Edit</a> <a ng-click="delete(x.id)">Delete</a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<!-- Modal-->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">{{Tilte}}</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="usr">Name:</label>
                        <input type="text" class="form-control" ng-model="page.name">
                    </div>
                    <div class="form-group">
                        <label for="usr">Descaption:</label>
                        <input type="text" class="form-control" ng-model="page.descaption">
                    </div>
                    <div class="form-group">
                        <label for="usr">Alias:</label>
                        <input type="text" class="form-control" ng-model="page.alias">
                    </div>
                    <div class="form-group">
                        <label for="usr">Meta Title:</label>
                        <input type="text" class="form-control" ng-model="page.metaTitle">
                    </div>
                    <div class="form-group">
                        <label for="usr">Meta Keyword:</label>
                        <input type="text" class="form-control" ng-model="page.metaKeyword">
                    </div>
                    <div class="form-group">
                        <label for="usr">Meta Description:</label>
                        <input type="text" class="form-control" ng-model="page.metaDescription">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Status:</label>
                        <input type="checkbox" ng-model="page.status">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="save(page.id)">save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
