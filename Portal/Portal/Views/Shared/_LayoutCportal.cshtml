<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">

        <link href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/lib/devextreme/css/dx.spa.css" rel="stylesheet" />
        <link href="~/lib/devextreme/css/dx.common.css" rel="stylesheet" />
        <link href="~/lib/devextreme/css/dx.light.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/siteCportal.css" />

    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
              
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">System</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Users</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Menus</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Content</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Extension</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">Help</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="col-lg-2 pull-left">
            <div class="j-links-groups">
                <h4 class="nav-header">Content</h4>
                <ul class="j-links-group nav nav-list">
                    <li>
                        <a href="">
                            <i class="fa fa-pencil" aria-hidden="true"></i><span class="j-links-link">New Article</span>
                        </a>
                    </li>
                    <li>
                        <a href="/CPortal/Common/PostList">
                            <span class="icon-stack" aria-hidden="true"></span> <span class="j-links-link">Articles</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-folder" aria-hidden="true"></span> <span class="j-links-link">Categories</span>
                        </a>
                    </li>
                    
                </ul>                
                <h4 class="nav-header">Structure</h4>
                <ul class="j-links-group nav nav-list">
                    <li>
                        <a href="">
                            <span class="icon-list-view" aria-hidden="true"></span> <span class="j-links-link">Menu(s)</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-cube" aria-hidden="true"></span> <span class="j-links-link">Modules</span>
                        </a>
                    </li>
                </ul>
                <h4 class="nav-header">Users</h4>
                <ul class="j-links-group nav nav-list">
                    <li>
                        <a href="\">
                            <span class="icon-users" aria-hidden="true"></span> <span class="j-links-link">Users</span>
                        </a>
                    </li>
                </ul>
                <h4 class="nav-header">Configuration</h4>
                <ul class="j-links-group nav nav-list">
                    <li>
                        <a href="">
                            <span class="icon-cog" aria-hidden="true"></span> <span class="j-links-link">Global</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-eye" aria-hidden="true"></span> <span class="j-links-link">Templates</span>
                        </a>
                    </li>
                    <li>
                        <a href="">
                            <span class="icon-comments-2" aria-hidden="true"></span> <span class="j-links-link">Language(s)</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-lg-10">
            @RenderBody()
        </div>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/lib/devextreme/js/dx.all.js"></script>
        <script src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/applications/app.js"></script>

        @RenderSection("Scripts", required: false)
    </environment>
    
</body>
</html>
